CREATE TABLE MY_EMPLOYEE(
    ID NUMBER(4) NOT NULL,
    LAST_NAME VARCHAR2(25),
    FIRST_NAME VARCHAR2(25),
    USERID VARCHAR(8),
    SALARY NUMBER(9,2)
);
DROP TABLE MY_EMPLOYEE;
CREATE TABLE MY_EMPLOYEE(
    ID NUMBER(4) NOT NULL CONSTRAINT ID_PK PRIMARY KEY,
    LAST_NAME VARCHAR2(25),
    FIRST_NAME VARCHAR2(25),
    USERID VARCHAR(8),
    SALARY NUMBER(9,2)
);
